{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "outDir": "./lib",
        "noUnusedLocals": true,
        "lib": [
            "es5",
            "es6",
            "es7"
        ],
        "declaration": true
    },
    "include": [
        "./src/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}